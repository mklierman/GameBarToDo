<Page
    x:Class="GameBarToDo.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lm="using:GameBarToDo.Models"
    MaxWidth="400"
    MaxHeight="600"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Grid x:Name="ContentArea" Margin="{StaticResource MediumLeftRightMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                VerticalAlignment="Top"
                Text="Game Bar To Do" />

            <ListView
                Grid.Row="1"
                ItemsSource="{x:Bind ViewModel.UserLists, Mode=TwoWay}"
                SelectedItem="{x:Bind ViewModel.SelectedList, Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="lm:ListModel">
                        <Grid Background="#FF1B1B1B" BorderBrush="#FF303030" BorderThickness="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <SymbolIcon  Grid.Column="0" Symbol="Add" />
                            <TextBlock Grid.Column="1" Padding="2" Text="{x:Bind list_name}"  />
                                <!--<StackPanel HorizontalAlignment="Stretch" Margin="3" Height="44" Padding="2" BorderThickness="1" CornerRadius="2" Background="#FF1B1B1B" BorderBrush="#FF303030">-->
                         
                            <!--<TextBlock Margin="2" Text="{x:Bind id}" />-->
                            <!--<TextBlock Margin="2" Text="{x:Bind created_date}" />-->
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" MaxHeight="33" AcceptsReturn="True" PlaceholderText="New List"
                    Text="{x:Bind ViewModel.NewListName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Grid.Column="1">
                    <SymbolIcon Symbol="Add" />
                </Button>
                
            </Grid>
        </Grid>
    </Grid>
</Page>
